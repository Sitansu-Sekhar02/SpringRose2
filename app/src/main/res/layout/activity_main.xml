<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/mainbackground"
    tools:context="com.afkharpro.springrose.MainActivity">


       <ImageView
       android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
           android:layout_marginStart="4dp"
        android:background="@drawable/arrow_left"
           android:layout_width="12dp"
           android:layout_height="23dp" />


    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/arrow_right"
        android:layout_width="12dp"
        android:layout_height="23dp" />

    <com.afkharpro.springrose.Base.Tahoma
        android:padding="6dp"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:id="@+id/en"
        android:textColor="#ffffff"

        android:gravity="center"
        android:background="@drawable/buttondarkcorner"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
       android:layout_above="@+id/mid"
        android:layout_marginBottom="60dp"
        android:background="@drawable/logo" />














    <LinearLayout
        android:id="@+id/mid"
        android:layout_centerInParent="true"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp">

        <ImageView
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_gravity="center"
            android:id="@+id/wede"
            android:layout_marginBottom="5dp"
            android:src="@drawable/banner"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"


            />

    </LinearLayout>




    <include
        android:id="@+id/thewheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_circle_rotate"
        android:layout_above="@+id/btn"

        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:id="@+id/thelogo"
        android:layout_marginTop="70dp"
        android:layout_above="@+id/btn"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/logoimage"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
android:src="@drawable/naturalflowerlogo"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"

            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp">

        <com.afkharpro.springrose.Base.TahomaBtn
            android:id="@+id/btnreal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttondarkcorner"
            android:gravity="center"
            android:text="  Shop Now!  "
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>
