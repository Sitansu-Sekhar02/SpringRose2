<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.afkharpro.springrose.OrderFlow.GuestRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/reg"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView

                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:hint="Full Name"
                        android:inputType="textPersonName" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin2"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/tele"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Telephone"
                        android:inputType="phone"
                        android:maxLength="10" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin3"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <com.afkharpro.springrose.Base.FlatRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eg: 05xxxxxxxx"
                    android:textColor="@color/darkgrey"
                    android:textSize="10dp"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin3a"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <AutoCompleteTextView

                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="City"
                        android:inputType="textAutoComplete" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin5b">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView

                        android:id="@+id/shipping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textPostalAddress" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin4"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:weightSum="2">

                <android.support.design.widget.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView

                        android:id="@+id/Postcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:hint="Post Code"
                        android:inputType="phone" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin5a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin4a"
                android:layout_marginTop="5dp"

                android:weightSum="1">


                <fr.ganfra.materialspinner.MaterialSpinner

                    android:id="@+id/spinnercountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin4a"
                    android:popupBackground="#757575"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="#757575"
                    app:ms_arrowSize="16dp"


                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelColor="#757575"


                    app:ms_floatingLabelText="Country"


                    app:ms_multiline="false"
                    app:ms_thickness="0.5dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin5b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin5a"
                android:layout_marginTop="5dp"
                android:weightSum="1">


                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="#757575"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="#757575"
                    app:ms_arrowSize="16dp"


                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelColor="#757575"


                    app:ms_floatingLabelText="City"


                    app:ms_multiline="false"
                    app:ms_thickness="0.5dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lin6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin4">

                <com.afkharpro.springrose.Base.FlatRegular

                    android:id="@+id/pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Preferred Contact"
                    android:textColor="#000000"
                    android:textSize="15sp"

                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/pc"

                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <CheckBox
                        android:id="@+id/whats"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"

                        android:text="Whatsapp" />


                    <CheckBox
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"

                        android:text="Phone Call" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lin8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin7"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:text="I agree to the " />

                <com.afkharpro.springrose.Base.FlatRegular
                    android:id="@+id/tc"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@+id/checkBox"
                    android:gravity="center"
                    android:text="terms and conditions"
                    android:textColor="@color/colorAccent"

                    />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lin7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lin6"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/iam"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"

                    android:text="I am the recipient" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <com.afkharpro.springrose.Base.FlatRegularBtn
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:text="Guest Register"
        android:textColor="#ffffff" />

</RelativeLayout>
